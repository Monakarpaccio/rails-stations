<h1>新しい上映スケジュールの追加</h1>

<%= form_with(model: [@movie, @schedule], url: admin_movie_schedules_path(@movie), local: true) do |form| %>
  <div>
    <%= form.label :start_time, '開始時刻' %>
    <%= form.datetime_select :start_time %>
  </div>

  <div>
    <%= form.label :end_time, '終了時刻' %>
    <%= form.datetime_select :end_time %>
  </div>

  <div>
    <%= form.submit '追加' %>
  </div>
<% end %>

<%= link_to '戻る', admin_movies_path %>
