<h1>予約一覧</h1>
<<%= link_to "予約作成", new_admin_reservation_path %>
<table>
    <thead>
      <tr>
        <th>映画作品</th>
        <th>座席</th>
        <th>日時</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.schedule.movie.name if reservation.schedule.present? %></td>
          <td><%= reservation.sheet_id %></td>
          <td><%= reservation.schedule.start_time.strftime("%Y-%m-%d %H:%M") if reservation.schedule.present? %></td>
          <td><%= reservation.name %></td>
          <td><%= reservation.email %></td>
          <td>
            <%= link_to '詳細', admin_reservation_path(reservation) %> |
            <%= link_to '削除', admin_reservation_path(reservation), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  