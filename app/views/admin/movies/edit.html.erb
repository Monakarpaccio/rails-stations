<%= form_with model: @movie, url: admin_movie_path(@movie), method: :put, local: true do |form| %>
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

  <div>
    <%= form.label :name, "タイトル" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :year, "公開年" %>
    <%= form.text_field :year %>
  </div>

  <div>
    <%= form.label :description, "概要" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :image_url, "画像URL" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :is_showing, "上映中" %>
    <%= form.check_box :is_showing %>
  </div>

  <div>
    <%= form.submit "更新する" %>
  </div>
  
  <%= button_to "削除する", admin_movie_path(@movie), method: :delete, data: { confirm: "本当に削除してよろしいですか？" } %>
<% end %>
