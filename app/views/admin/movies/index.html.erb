<!DOCTYPE html>
<html>
<head>
  <title>Admin Movies List</title>
</head>
<body>
  <h1>映画一覧</h1>
  <table border="1">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像</th>
      <th>上映中</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.id, edit_admin_movie_path(movie) %></td>
        <td><%= movie.name %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><a href="<%= movie.image_url %>">画像</a></td>
        <td><%= movie.is_showing ? '上映中' : '上映予定' %></td>
        <td><%= movie.created_at %></td>
        <td><%= movie.updated_at %></td>
      </tr>
    <% end %>
  </table>
</body>
</html>
